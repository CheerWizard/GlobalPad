<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <corners android:radius="16dp"/>
        <gradient android:centerColor="@color/colorPink"
            android:startColor="@color/colorPink"
            android:endColor="@color/colorPurple"
            android:type="linear"
            android:centerX="-1"
            android:centerY="0"/>
        <size android:width="@dimen/pad_button"
            android:height="@dimen/pad_button"/>
        <stroke android:color="@color/colorSilver"
            android:width="1dp"/>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient android:centerColor="@color/colorPurple"
                android:startColor="@color/colorPurple"
                android:endColor="@color/colorPink"
                android:type="linear"
                android:centerX="-1"
                android:centerY="0"/>
            <size android:width="@dimen/pad_button"
                android:height="@dimen/pad_button"/>
            <stroke android:color="@color/colorSilver"
                android:width="1dp"/>
        </shape>
    </item>
</selector>